{%  extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}

{# Progress bar #}
<div class="progress no-border hidden" id="delete-progress">
	<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">	
	<span class="sr-only">Cargando.... por favor espere.</span>
</div>
</div>


	{{ include('PPPCanBundle:Usuario:messages/success.html.twig') }}
	{{ include('PPPCanBundle:Usuario:messages/danger.html.twig') }}
	<div class="container">
		<div class="col-md-12">
	
				<div class="page-header">
					<h2>Ataques</h2>
				</div>

<div class="table-responsive">
		{% if pagination.getTotalItemCount == 0 %}
	{{'<h2 class="padding-none"><font color="BLACK">No se encontraron registros</font></h2>'}}

		{% else %}

	<br>
	Total registros: <span id="total">{{ pagination.getTotalItemCount }}</span>	

	<table class="table table-striped table-hover">
		<thead>
	<tr>

<th>{{ knp_pagination_sortable(pagination, 'Nombre paciente', 'u.nombresp') }}</th>		
<th>{{ knp_pagination_sortable(pagination, 'Apellidos paciente', 'u.apellidosp') }}</th>		
<th>{{ knp_pagination_sortable(pagination, 'Tipo de identificacion', 'u.tipodoc') }}</th>		
<th>{{ knp_pagination_sortable(pagination, 'Numero de identificacion', 'u.numdoc') }}</th>		
	
		<th>Acciones</th>
	</tr>
</thead>
<tbody>
	{% for ataque in pagination %}	
		<tr data-id="{{ ataque.id }}" >
			<td>{{ ataque.nombresp }}</td>
			<td>{{ ataque.apellidosp }}</td>
			<td>{{ ataque.tipodoc }}</td>			
			<td>{{ ataque.numdoc }}</td>
			<td calss="actions">
<a href="{{ path('ppp_ataque_view', { id: ataque.id  }) }}" class="btn btn-sm btn-info">Ver</a>
			</td>
		</tr>
	{% endfor %}
</tbody>
</table>
 {# display navigation #}
<div class="navigation">
{{ knp_pagination_render(pagination) }}
</div>

{% endif %} 

</div>
</div>
</div>
{% endblock %}
